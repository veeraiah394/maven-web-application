pipelineTriggers([pollSCM('* * * * *')])])

def mavenHome = toll name: "maven3.8.4"

stage('CheckoutCode'){
git branch: 'development', credentialsId: '98e122a9-54f4-472d-9c56-ed79bdbc8234', url: 'https://github.com/veeraiah394/maven-web-application.git'
}


stage('Build'){
